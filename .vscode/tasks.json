{
    "version": "2.0.0",
    "label": "build",
    "command": "C:/MinGW/bin/g++.exe",
    "type": "shell",
    "isDefault": true,
    "kind": "build",
    "presentation": {
        "reveal": "always",
        "panel": "new"
    },
    "watch": true,
    "args": ["-Wall", "-std=c++17", "-g", "-Ic:/MinGW/include", "*.cpp", "-lfreeglut", "-lglu32", "-lopengl32"],
    "problemMatcher":"$gcc"
}

